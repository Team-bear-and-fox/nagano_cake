<h4>商品新規登録</h4>
<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-5">
      <%= render 'error_messages', item: @item %>
      <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
        <table>
          <tbody>
            <tr>
              <th><p>商品画像</p></th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <th><p>商品名</p></th>
              <td class="form-group py-1">
                <%= f.text_field :name, placeholder:"商品名", class: "form-control" %>
              </td>
            </tr>
            <tr>
              <th><p>商品説明</p></th>
              <td class="form-group">
                <%= f.text_area :explanation, placeholder:"ここに説明文を記述します", rows: 5, class: "form-control" %>
              </td>
            </tr>
            <tr>
              <th><p>ジャンル</p></th>
              <td class="form-group">
                <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: "--選択してください--" }, { class: "form-control" }%>
              </td>
            </tr>
            <tr>
              <th><p>税抜価格</p></th>
              <td class="form-group">
                <div class="input-group">
                  <%= f.text_field :value, placeholder:"1000", class: "form-control" %>
                  <div class="input-group-append">
                    <p> 円</p>
                  </div>
                </div>
              </td>
            </tr>
            <tr>
              <th><p>販売ステータス</p></th>
              <td class="form-check">
                <%= f.radio_button :is_on_sale, true %>
                <%= f.label :"販売中" %>
                <%= f.radio_button :is_on_sale, false %>
                <%= f.label :"販売停止中" %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="text-center">
          <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>

  
