<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="font-weight-bold bg-light w-25 text-center"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h5>
      <table class="table-borderless">
        <colgroup>
          <col class="col-2">
          <col class="col-2">
        </colgroup>
        <tbody style="height:400px;">
          <tr>
            <th>会員ID</th>
            <td></td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td></td>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td></td>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td></td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td></td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td></td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td></td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td></td>
            <td>
              <% if @customer.is_active == true %>
                <%= "有効" %>
              <% elsif @customer.is_active == false %>
                <%= "退会" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <%=link_to"編集する",edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
      <%=link_to"注文履歴一覧を見る",admin_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>

