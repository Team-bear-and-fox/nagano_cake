<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h5 class="font-weight-bold bg-light w-25 text-center">注文履歴一覧</h5>
      <table class="table table-bordered mt-3 mb-5" style="border-width:3px; border-color:black;">
        <thead class="table-active">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td><%=link_to(admin_order_path(order.id)) do %>
                <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                <% end %>
                </td>
              <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
              <td><%= order.order_details.sum(:amount) %></td>
              <td><%= I18n.t("enums.order.order_status.#{order.order_status}") %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-12 text-center">
      <div class="pagination text-center">
         <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>
