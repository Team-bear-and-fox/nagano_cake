<div class="container mt-3">
 <h5 class="font-weight-bold bg-light w-25 text-center">ジャンル編集</h5>
 <%= render 'error_messages', genre: @genre %>
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <table>
        <tbody>
          <tr>
            <td><h7 class="font-weight-bold">ジャンル名</h7></td>
            <td class="p-5"><%= f.text_field :name %></td>
            <td><%= f.submit "変更を保存" , class:"btn btn-success"%></td>
          </tr>
        </tbody>
      </table>
    <% end %>
   </div>
  </div>
</div>
