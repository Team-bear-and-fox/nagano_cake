<div class="container mt-3">
  <h5 class="font-weight-bold w-25 text-center ml-5">ジャンル一覧・追加</h5>
  <%= render 'error_messages', genre: @genre %>
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <%= form_with model: @genre, url: admin_genres_path do |f| %><!--変更の可能性あり-->
       <table>
         <tbody>
           <tr>
             <td><h7 class="font-weight-bold">ジャンル名</h7></td>
             <td class="p-5"><%= f.text_field :name, placeholder: "ジャンル名" %></td>
             <td><%= f.submit '新規登録',class:"btn btn-success" %></td>
           </tr>
         </tbody>
       </table>
      <% end %>
      <table class="table">
        <thead>
          <tr>
            <th colspan=2><b>　　　　ジャンル</b></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
        </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>
