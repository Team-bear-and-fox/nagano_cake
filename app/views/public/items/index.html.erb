<div class="container">
 <div class="row">
  <div class="col-3"></div>
  <div class="col-9">
   <h3 class="font-weight-bold">商品一覧(全<%= @items_sale.count %>件)</h3>
   <div class = "d-flex justify-content-around">
    <div class="search-items d-flex flex-wrap">
    <% @items_sale.each_slice(4) do |items| %>
     <% items.each do |item| %>
      <%= link_to item_path(item.id) do %>
       <div class="bg-white d-block mr-3 ml-3 " >
         <%= image_tag item.get_image, :size =>'160x160' %>
         <p><%= item.name %></p>
         <p>￥<%= item.add_tax_value.to_s(:delimited) %></p>
       </div>
      <% end %>
     <% end %>
    <% end %>
    </div>
   </div>
  </div>
  <div class="pagination justify-content-center">
    <%= paginate @item %><!--変わるかも-->
  </div>
 </div>
</div>