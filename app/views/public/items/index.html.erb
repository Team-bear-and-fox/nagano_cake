<div class="container mt-5">
  <div class="row">
   <div class="col-1">
   </div>
     <div class="col-md-10">
      <h1>商品一覧(全<%= @items.count %>件)</h1>
       <div class="row">
            <% @item.each do |item| %>
             <div class= "col-3">
              <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image, :size =>'100x100' %><% end %>
              <p><%= item.name %></p>
              <p>￥<%= item.add_tax_value.to_s(:delimited) %></p>
             </div>
            <% end %>
       </div>
     </div>
  </div>
 <nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <%= paginate @item %>
  </ul>
 </nav>
</div>

