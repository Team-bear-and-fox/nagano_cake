<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-8">
      <h3 class="font-weight-bold">商品一覧(全<%= @items.count %>件)</h3>
      <table class="table table-borderless">
        <thead>
          <tr>
          </tr>
        </thead>
        <tbody>
           <% @item.each_slice(4) do |items| %>
            <tr>
              <% items.each do |item| %>
                <td>
                  <%= link_to item_path(item.id) do %>
                  <div class="bg-white d-block mr-3 ml-3" >
                    <%= image_tag item.get_image, :size =>'160x160' %>
                    <p><%= item.name %></p>
                    <p>￥<%= item.add_tax_value.to_s(:delimited) %></p>
                  </div>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pagination justify-content-center">
         <%= paginate @item %><!--変わるかも-->
      </div>
    </div>
  </div>
</div>
