<div class="container">
  <div class="row">
    <div class="col">
      <%= render 'layouts/search' %>
      <h3 class="font-weight-bold">商品一覧(全<%= @items.count %>件)</h3>
      <table class="table table-borderless">
        <thead>
          <tr>
          </tr>
        </thead>
        <tbody>
           <% @item.each_slice(4) do |items| %>
            <tr>
              <% items.each do |item| %>
                <td>
                  <%= link_to item_path(item.id) do %>
                    <%= image_tag item.get_image, :size =>'100x100' %>
                  <% end %>
                  <p><%= item.name %></p>
                  <p>￥<%= item.add_tax_value.to_s(:delimited) %>円</p>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pagination justify-content-center">
         <%= paginate @item %><!--変わるかも-->
      </div>
    </div>
  </div>
</div>
