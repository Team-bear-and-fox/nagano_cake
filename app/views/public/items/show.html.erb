<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'genre', genres: @genres %>
    </div>
    <%= form_with model: @cart_items, url: cart_items_path , method: :post do |f| %>
      <div class="row ml-5">
        <div class="col-5">
          <%= image_tag @item.get_image, :size =>'250x250' %>
        </div>
        <div class="col-5 ml-5">
          <h4 class="font-weight-bold"><%= @item.name %></h4>
          <p><%= @item.explanation %></p><br>
          <h4><span class="font-weight-bold">￥<%= @item.add_tax_value.to_s(:delimited) %></span>(税込)</h4>
          <table class="table-borderless">
            <tr>
              <%= f.hidden_field :'cart_item[item_id]', :value => @item.id %>
              <td class="dropdown"><%= f.select :'cart_item[amount]', *[1..10],include_blank: "個数選択" %></td>
              <td class="p-2"><%= f.submit "カートに入れる" , class:"btn btn-success" %></td>
           </tr>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>

