<div class="genre_search">
  <table class="table-borderless">
    <tr>
      <th class="font-weight-bold text-center pl-4 pr-4">ジャンル検索</th>
    </tr>
    <%= form_with url: genre_search_path, method: :get do |f| %>
      <% genres.each do |genre| %>
        <tr>
          <td class="text-center p-1"><%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>