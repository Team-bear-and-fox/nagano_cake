<div class="container">
  <div class="row">
    <div class="col">
      <h1>ショッピングカート</h1>
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>

        <tbody>
          <tr>
            <td><%= image_tag cart_item.item.get_image, :size =>'100x100' %><%= @cart_items.items.name %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

