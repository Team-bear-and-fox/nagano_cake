<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <h1>注文履歴詳細</h1>
      <table border="1" style="border-collapse: collapse">
        <h1>注文情報</h1>
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>〒<%= @order.postal_code %><br>
                  <%= @order.address %><br>
                  <%= @order.name %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td><%= @order.order_status_i18n %></td>
          </tr>
        </tbody>
      </table>
      <table border="1" style="border-collapse: collapse">
        <h1>注文内容</h1>
        <thead>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </thead>

        <tbody>
          <% @order_details.each do |order| %>
            <tr>
              <td><%= order.item.name %></td>
              <td><%= order.item.add_tax_value.to_s(:delimited)%></td>
              <td><%= order.amount %></td>
              <td><%= order.add_sub_total %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

     <div class="offset-md-1 col-md-8">
        <table border="1" style="border-collapse: collapse">
          <h1>請求情報</h1>
          <tbody>
            <tr>
              <td>商品合計</td>
              <td><%= @total_item_amount %></td>
            </tr>
            <tr>
              <td>配送料</td>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <td>ご請求額</td>
              <td><%= @order.payment_total %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
