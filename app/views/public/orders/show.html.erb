<div class="container-fluid mt-2">
  <h5 class="font-weight-bold w-25 text-center ml-5">注文履歴詳細</h5>
  <div class="row mt-3 mx-auto">
     <div class="col-5 mx-auto mb-3">
      <table border="1" style="border-collapse: collapse" cellpadding="10">
        <h6 class="font-weight-bold">注文情報</h6>
        <tr>
          <th class="p-1">注文日</th>
          <td class="p-1 w-75"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="p-1">配送先</th>
          <td class="p-1">〒<%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %></td>
        </tr>
        <tr>
          <th class="p-1">支払方法</th>
          <td class="p-1"><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th class="p-1">ステータス</th>
          <td class="p-1"><%= @order.order_status_i18n %></td>
        </tr>
      </table>
     </div>
   <div class="col-5 mx-auto">
    <table border="1" style="border-collapse: collapse" cellpadding="10">
      <h6 class="font-weight-bold">請求情報</h6>
      <tr>
        <th class="p-1">商品合計</th>
        <td class="p-1 w-75"><%= @total_item_amount.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th class="p-1">配送料</th>
        <td class="p-1"><%= @order.postage.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th class="p-1">ご請求額</th>
        <td class="p-1"><%= @order.payment_total.to_s(:delimited) %></td>
      </tr>
    </table>
   </div>
  </div>
  <div class="row">
    <div class="col-5 mx-auto mt-3">
    <table border="1" style="border-collapse: collapse" cellpadding="10">
      <h6 class="font-weight-bold pt-3">注文内容</h6>
      <th class="p-1">商品</th>
      <th class="p-1">単価（税込）</th>
      <th class="p-1">個数</th>
      <th class="p-1">小計</th>
      <% @order_details.each do |order| %>
        <tr>
          <td class="p-1 w-50"><%= order.item.name %></td>
          <td class="p-1"><%= order.item.add_tax_value.to_s(:delimited)%></td>
          <td class="p-1"><%= order.amount %></td>
          <td class="p-1"><%= order.add_sub_total.to_s(:delimited) %></td>
        </tr>
      <% end %>
    </table>
   </div>
   <dev class="col-5 mx-auto"></dev>
  </div>
 </div>
</div>

